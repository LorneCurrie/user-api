{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        140
      ]
    },
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ]
  },
  "rules": {
    "max-line-length": {
      "options": [
        140
      ]
    },
    "no-var-requires": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-sort-keys": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ]
  },
  "rulesDirectory": []
}
